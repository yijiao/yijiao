<?xml version="1.0"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<!-- 主题 -->
	<constant name="struts.ui.theme" value="simple" />
	<!-- 开发模式 -->
	<constant name="struts.devMode" value="true" />
	
	<package name="yijiaoPkg" extends="struts-default" namespace="/">
		<interceptors>
			<!-- 注册登陆拦截器 -->
			<interceptor name="loginInterceptor" class="com.struts.interceptor.LoginInterceptor" />
			<!-- 定义拦截器栈 -->
			<interceptor-stack name="yijiaoStack">
				<interceptor-ref name="loginInterceptor" />
				<interceptor-ref name="defaultStack">
					<param name="modelDriven.refreshModelBeforeResult">true</param>
				</interceptor-ref>
			</interceptor-stack>
		</interceptors>
		
		<!-- 定义默认栈 -->
		<default-interceptor-ref name="yijiaoStack" />
		
		<!-- 定义全局结果 -->
		<global-results>
			<result name="login">/login.jsp</result>
			<result name="manageAction" type="redirectAction">
				<param name="namespace">/</param>
				<param name="actionName">ManageAction_userListPage</param>
			</result>
		</global-results>
		<!-- 更换验证图片 -->
		<action name="SecurityCodeImageAction"   class="com.struts.SecurityCodeImageAction">
	         <result name="success" type="stream">
	              <param name="contentType">image/jpeg</param>
	              <param name="inputName">imageStream</param>
	              <param name="bufferSize">2048</param>
	          </result>
    	</action>
      
		<!-- loginAction -->
		<action name="LoginAction_*" class="com.struts.LoginAction" method="{1}">
			<result name="LoginPage">/login.jsp</result>
			<result name="input">/login.jsp</result>
			<result name="success">/frame.html</result>
		</action>
		
		<!-- ManageAction -->
		<action name="ManageAction_*" class="com.struts.ManageAction" method="{1}">
			<result name="userList">/userList.jsp</result>
			<result name="editPassword">/editPassword.jsp</result>
			<result name="input">/editPassword.jsp</result>
			<result name="updateSuccess">/right.jsp</result>
		</action>
	
	</package>
</struts>